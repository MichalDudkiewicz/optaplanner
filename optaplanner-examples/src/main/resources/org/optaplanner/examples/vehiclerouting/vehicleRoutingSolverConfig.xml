<!--        </nearbySelection>-->
<!--      </secondaryEntitySelector>-->
<!--  </ruin>-->

  <constructionHeuristic></constructionHeuristic>

  <localSearch>
    <termination>
      <millisecondsSpentLimit>100</millisecondsSpentLimit>
    </termination>
  </localSearch>
</solver>
